reachable(X) :- edge(X,Y).
edge(X,Y) :- edge(Y,X).
#retract["example1", exact, "vertex(", Z, ")"]{b,1} :- disconnected(Z).
#assert["disconnected", "vertex(", Z,")."]{b,2} :- disconnected(Z).
disconnected(X) :- not reachable(X), vertex(X).

