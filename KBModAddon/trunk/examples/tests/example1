%Program that removes disconnected vertices from knowledge base of the graph and stores them in a new knowledge base

reachable(X) :- edge(X,Y).
edge(X,Y) :- edge(Y,X).
#retract["example1", exact, "vertex(", Z, ")"]{b,1} :- unreachable(Z).
#assert["disconnected", "vertex(", Z,")."]{b,2} :- unreachable(Z).
disconected(X) :- not reachable(X), vertex(X).

vertex(1).
vertex(2).
vertex(3).
vertex(4).
vertex(5).
vertex(6).
edge(1,2).
edge(3,2).
edge(3,4).

